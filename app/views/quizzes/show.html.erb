<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @quiz.name %>
</p>

<p>
  <strong>Step:</strong>
  <%= @quiz.step.name %>
</p>

<% @questions.each do |q| %>
    <%= q.question %><br>
    <%= q.option1 %><br>
    <%= q.option2 %><br>
    <%= q.answer %><br><br>
<% end %>

<br>
<button id="quiz_toggle" class="button success radius">Lägg till fråga</button>
<br>
<div class="quiz_form">
    <%= render :partial => '/questions/form' %>
</div>

<br>

<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>
